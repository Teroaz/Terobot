{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "skipLibCheck": true,
    "removeComments": true,
    "declaration": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/__tests__/*"
  ]
}
